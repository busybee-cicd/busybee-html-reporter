<div class="compare">
    <div id="compareBtns-{{responsePart}}-{{id}}"
         style="margin-bottom: 1em"
         role="group">
        <button type="button" class="btn btn-sm btn-secondary active" onclick="showComparison('sideBySide','{{responsePart}}', '{{id}}')">side-by-side</button>
        <button type="button" class="btn btn-sm btn-secondary" onclick="showComparison('diff', '{{responsePart}}', '{{id}}')">diff</button>
        {{#if payload.error}}
            <button type="button" class="btn btn-sm btn-secondary btn-danger" onclick="showComparison('error', '{{responsePart}}', '{{id}}')">error</button>
        {{/if}}
    </div>
    <div id="sideBySide-{{responsePart}}-{{id}}">
        {{sideBySide actual=payload.actual responsePart=responsePart expected=payload.expected id=id }}
    </div>
    <div id="diff-{{responsePart}}-{{id}}" style="display: none;">
        {{diff actual=payload.actual expected=payload.expected responsePart=responsePart id=id}}
    </div>
    {{#if payload.error}}
    <div id="error-{{responsePart}}-{{id}}" style="display: none;">
        {{jsonPretty payload.error}}
    </div>
    {{/if}}
</div>

